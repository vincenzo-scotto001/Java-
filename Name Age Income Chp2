//Chapter 2 problem 1 

public class NameAgeIncome
{
   public static void main(String[] args)
   {
      
      String name;
      int age;
      double annualPay;
      
      name = "vincenzo";
      age = 21;
      annualPay = 10;
      
      
      System.out.println("My name is " + name);
      System.out.println("My age is " + age);
      System.out.println("I hope to make " + annualPay +"$");
 
    }
}
